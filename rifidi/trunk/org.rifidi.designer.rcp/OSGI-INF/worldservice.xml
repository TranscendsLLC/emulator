<?xml version="1.0"?>
<component name="worldservice">
	<implementation
		class="org.rifidi.designer.services.core.world.WorldServiceImpl" />
	<service>
		<provide
			interface="org.rifidi.designer.services.core.world.WorldService" />
		<provide
			interface="org.rifidi.designer.services.core.world.CommandStateService" />
	</service>
	<reference name="scenedataserviceref" interface="org.rifidi.designer.services.core.entities.SceneDataService"
		bind="setSceneDataService" unbind="unsetSceneDataService" cardinality="0..1"
		policy="dynamic" />
	<reference name="messagingserviceref" interface="org.rifidi.designer.services.core.messaging.MessagingService"
		bind="setMessagingService" unbind="unsetMessagingService" cardinality="0..1"
		policy="dynamic" />
	<reference name="fieldserviceref" interface="org.rifidi.designer.services.core.collision.FieldService"
		bind="setFieldService" unbind="unsetFieldService" cardinality="0..1"
		policy="dynamic" />
	<reference name="cameraserviceref" interface="org.rifidi.designer.services.core.camera.CameraService"
		bind="setCameraService" unbind="unsetCameraService" cardinality="0..1"
		policy="dynamic" />
</component>
