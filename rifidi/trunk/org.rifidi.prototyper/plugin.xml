<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.rifidi.prototyper.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Prototyper Perspective"
            class="org.rifidi.prototyper.Perspective"
            id="org.rifidi.prototyper.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.rifidi.prototyper.application"
            name="Prototyper">
         <property
               name="appName"
               value="Prototyper">
         </property>
         <property
               name="startupForegroundColor"
               value="C0C0C0">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,590,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.rifidi.prototyper.perspective">
         <view
               closeable="false"
               id="org.rifidi.emulator.readerview.view"
               minimized="false"
               moveable="false"
               ratio=".3"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.rifidi.prototyper.items.view"
               minimized="false"
               moveable="false"
               ratio=".4"
               relationship="bottom"
               relative="org.rifidi.emulator.readerview.view"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               moveable="true"
               ratio=".75"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="product1"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.rifidi.prototyper.application"
            name="newprototyper">
         <property
               name="appName"
               value="newprototyper">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <separator
                  name="new"
                  visible="true">
            </separator>
            <separator
                  name="save"
                  visible="true">
            </separator>
            <separator
                  name="exit"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
         <menu
               id="edit"
               label="Edit">
         </menu>
         <menu
               id="view"
               label="View">
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="coolbar:org.rifidi.prototyper.main.toolbar">
      </menuContribution>
   </extension>

</plugin>
